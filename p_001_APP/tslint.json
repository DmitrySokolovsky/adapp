{
    "defaultSeverity": "error",
    "extends": [
      "tslint-react",
      "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
      "align": [true, "parameters", "statements"],
      "triple-equals": true,
      "strict-boolean-expressions": false,
      "ter-arrow-parens": [true, "always"],
      "no-var-self": false,
      "jsx-curly-spacing": {"when": "never", "children": true},
      "max-line-length": false,
      "jsx-no-multiline-js": false,
      "function-name": [true, {
        "function-regex": "^[A-z][\\w\\d]+$"
      }], 
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-trailing-underscore",
        "allow-leading-underscore"
      ],
      "import-name": false,
      "prefer-array-literal": [ true, { "allow-type-parameters": true } ],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "singleline": "never"
        }
      ],      
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-type-operator",
        "check-preblock"
      ]    
    },
    "rulesDirectory": []
  }
  